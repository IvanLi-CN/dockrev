DOCKREV_HTTP_ADDR=0.0.0.0:50883
DOCKREV_DB_PATH=./data/dockrev.sqlite3

# Docker registry credentials (optional; read-only bind mount this file into the container)
# DOCKREV_DOCKER_CONFIG=/data/docker-config.json

# Compose CLI selection: docker-compose v1 or docker compose plugin
# DOCKREV_COMPOSE_BIN=docker-compose

# Auth
# DOCKREV_AUTH_FORWARD_HEADER_NAME=X-Forwarded-User
# DOCKREV_AUTH_ALLOW_ANONYMOUS_IN_DEV=true

# Self-upgrade console URL (served by supervisor, default /supervisor/)
# DOCKREV_SELF_UPGRADE_URL=/supervisor/

# Dockrev image repo (used by UI to identify Dockrev service, default ghcr.io/ivanli-cn/dockrev)
# DOCKREV_IMAGE_REPO=ghcr.io/ivanli-cn/dockrev

# Webhook trigger secret (optional)
# DOCKREV_WEBHOOK_SECRET=change-me

# Host platform override (optional)
# DOCKREV_HOST_PLATFORM=linux/amd64

# Auto-discovery
# DOCKREV_DISCOVERY_INTERVAL_SECONDS=60
# DOCKREV_DISCOVERY_MAX_ACTIONS=200

# Supervisor (self-upgrade executor + console)
# DOCKREV_SUPERVISOR_HTTP_ADDR=0.0.0.0:50884
# DOCKREV_SUPERVISOR_BASE_PATH=/supervisor
# DOCKREV_SUPERVISOR_TARGET_IMAGE_REPO=ghcr.io/ivanli-cn/dockrev
# DOCKREV_SUPERVISOR_STATE_PATH=./data/supervisor/self-upgrade.json
